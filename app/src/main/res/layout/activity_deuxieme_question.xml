<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="10pt"
        android:textAlignment="center"
        android:text="DeuxiÃ¨me Question !" />

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView5"
        android:textColor="@android:color/black"
        android:textSize="10pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quels sont les 3 personages principaux de The Legend of Zelda : Twilight Princess ?" />

    <CheckBox
        android:id="@+id/Zelda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zelda" />

    <CheckBox
        android:id="@+id/Tetra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tetra" />

    <CheckBox
        android:id="@+id/Ganondorf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ganondorf" />

    <CheckBox
        android:id="@+id/Link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Link" />

    <CheckBox
        android:id="@+id/jfa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:text="JFA" />

    <Button
        android:onClick="onClickValider"
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valider" />

    <Button
        android:onClick="onClickAnnuler"
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Annuler" />
</LinearLayout>